@{
    
    ViewData["Title"] = "Update Product Details";
}
@model PrathamFirst.Models.Product
<h1>@ViewData["Title"]</h1>
<form method="post" asp-controller="Product" asp-action="Update">
    <div class="form-group">
        <label for="namide">Product Id</label>
        <input type="text" value="@Model.Id" class="form-control w-25" name="id" id="id" readonly/>
    </div>
    <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" value="@Model.Name" class="form-control w-25" name="name" id="name">
    </div>
    <div class="form-group">
        <label for="stock">Stock</label>
        <input type="text" value="@Model.Stock" class="form-control w-25" name="stock" id="stock">
    </div>
    <div class="form-group">
        <label for="color">Product Color</label>
        <input type="text" value="@Model.Color" class="form-control w-25" name="color" id="color">
    </div>
    <div class="form-group">
        <label for="size">Product Size: </label>
        <select class="form-select form-control w-25" asp-for="Size" id="size" aria-label="Product Size">
            <option value="Large">Large</option>
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
        </select>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" value="@Model.Price" class="form-control w-25" name="price" id="price">
    </div>
    <button type="submit" class="btn btn-primary mt-lg-3">Update</button>
</form>