
@{
    ViewData["Title"] = "Add new Product";
}
<h1 align="center" >@ViewData["Title"]</h1>
@{
    
}
@model PrathamFirst.ViewModel.ProductVM

<form autocomplete="off" method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="AddNew">
     <h3 class="text-danger text-center">@TempData["errorMessage"]</h3>
    <div class="row">
        <div class="form-group col-md-6">
        <label for="name">Product Name</label>
            <input type="text" class="form-control" name="name" autocomplete="false" id="name">
        <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="Image">Product Image</label>
            <input type="file" class="form-control" autocomplete="false" name="Image" id="Image">

        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="size">Product Size: </label>
            <select class="form-select form-control " name="size" id="size" aria-label="Product Size">
                <option value="Large" selected>Large</option>
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
            </select>
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="stock">Stock(in Pcs)</label>
            <input type="text" class="form-control" autocomplete="false" name="stock" id="stock">
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group ">
        <label for="color">Product Color</label>
        <input type="text" class="form-control" autocomplete="false" name="color" id="color">
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
         <label for="price">Price</label>
        <input type="text" class="form-control" autocomplete="false" name="price" id="price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-lg-3">Submit</button>
</form>